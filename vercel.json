{
  "version": 2,
  "installCommand": "npm install --include=dev",
  "buildCommand": "npm run vercel-build",
  "rewrites": [
    {
      "source": "/api/products/related/:id",
      "destination": "/api/products?id=:id&related=true"
    },
    {
      "source": "/api/products/:id",
      "destination": "/api/products?id=:id"
    },
    {
      "source": "/api/gallery/:id",
      "destination": "/api/gallery?id=:id"
    },
    {
      "source": "/api/testimonials",
      "destination": "/api/content?type=testimonials"
    },
    {
      "source": "/api/team",
      "destination": "/api/content?type=team"
    },
    {
      "source": "/api/faqs",
      "destination": "/api/content?type=faqs"
    },
    {
      "source": "/api/admin/products/:id",
      "destination": "/api/admin/products?id=:id"
    },
    {
      "source": "/api/admin/gallery/:id",
      "destination": "/api/admin/gallery?id=:id"
    },
    {
      "source": "/api/admin/contacts/:id",
      "destination": "/api/admin/contacts?id=:id"
    },
    {
      "source": "/api/admin/testimonials/:id",
      "destination": "/api/admin/testimonials?id=:id"
    },
    {
      "source": "/api/admin/team/:id",
      "destination": "/api/admin/team?id=:id"
    },
    {
      "source": "/api/admin/faqs/:id",
      "destination": "/api/admin/faqs?id=:id"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,PATCH,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        }
      ]
    }
  ]
}
